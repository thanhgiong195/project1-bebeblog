<%= form_for @newspost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: t(".title"), class: "form-control" %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".placeholder"), class: "form-control" %>
  </div>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
    <%= f.submit t(".post"), class: "btn btn-primary btn-post" %>
  </span>
<% end %>
