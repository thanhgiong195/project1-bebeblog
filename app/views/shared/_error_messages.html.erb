<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t ".the_form" %> <%= pluralize object.errors.size, t(".error") %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li class= "errors"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
