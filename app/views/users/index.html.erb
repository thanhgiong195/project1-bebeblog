<% provide :title, t(".all_users") %>
<h1><%= t ".all_users" %></h1>

<%= will_paginate %>

<ul class="show_users">
  <table class="table table-striped">
    <tr>
      <th><%= t ".avatar" %></th>
      <th><%= t ".name" %></th>
      <% if current_user.is_admin? %>
        <th><%= t ".email" %></th>
        <th><%= t ".delete" %></th>
      <% end %>
    </tr>
    <%= render @users %>
  </table>
</ul>

<%= will_paginate %>
